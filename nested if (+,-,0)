include<stdio.h>
int main()
{
    int a;
    printf("enter the number :");
    scanf("%d",&a);
    
    if(a>0)
    {
        if (a>0)
        printf("a is positive");
    }
    if(a==0)
    printf("a is equal to 0");
    else
    {
        if(a<0)
        printf("a is negative");
    }
    return 0;
}
